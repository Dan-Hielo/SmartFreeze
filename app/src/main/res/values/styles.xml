<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonNoStyle" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="AppTheme.titulo">
        <item name="android:textColor">#0f6fa8</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/background_white_with_bottom_divider</item>
    </style>
    <style name="SimpleDraweeView">
        <item name="placeholderImageScaleType">centerInside</item>
        <item name="placeholderImage">@drawable/ic_placeholder</item>
        <item name="actualImageScaleType">fitCenter</item>
    </style>

    <style name="EditText">
        <item name="colorControlNormal">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/textColorPrimary</item>
        <item name="colorControlHighlight">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
