<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonNoStyle" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="AppTheme.titulo">
        <item name="android:textColor">#0f6fa8</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SubTabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
